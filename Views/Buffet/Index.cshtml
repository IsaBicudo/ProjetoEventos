@model IEnumerable<ProjetoEventos.Models.Buffet>

@{
    ViewData["Title"] = "Eventopia";
}

<h1>Lista de Buffet</h1>

<p>
    <a asp-action="Create" class="btn btn-primary">Cadastrar</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.BuffetTipo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemBuffet1)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemBuffet2)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ImagemBuffet3)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BuffetTipo)
            </td>
            <td>
                 <img src="@item.ImagemBuffet1" style="height:110px;width:116px;border-radius:4px;object-fit:cover;">
            </td>
            <td>
                 <img src="@item.ImagemBuffet2" style="height:110px;width:116px;border-radius:4px;object-fit:cover;">
            </td>
            <td>
                 <img src="@item.ImagemBuffet3" style="height:110px;width:116px;border-radius:4px;object-fit:cover;">
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-primary">Editar</a>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-primary">Detalhes</a>
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-segundo">Deletar</a>
            </td>
        </tr>
}
    </tbody>
</table>
